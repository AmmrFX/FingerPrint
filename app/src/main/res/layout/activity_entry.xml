<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Entry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Id"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="user Id"></EditText>

        <EditText
            android:id="@+id/First"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="First Name"></EditText>

        <EditText
            android:id="@+id/Last"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Last Name"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_margin="30dp">

            <Button
                android:id="@+id/button_open_close2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"

                android:layout_marginLeft="60dp"
                android:text="Open" />

            <Button
                android:id="@+id/button_acquire2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_open_close2"
                android:layout_gravity="top|right"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:text="Acquire" />

            <Button
                android:id="@+id/button_DataBase2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_acquire2"

                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:text="DataBase" />



        </RelativeLayout>

        <ImageView
            android:id="@+id/fingerImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="description"
            android:minWidth="300dp"
            android:minHeight="300dp"
           />
    </LinearLayout>

    <Button
        android:id="@+id/button_enumerate2"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:text="Enumerate" />
</LinearLayout>